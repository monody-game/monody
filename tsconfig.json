{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"outDir": "websockets/dist",
		"rootDir": "websockets",

		"module": "nodenext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"skipLibCheck": true, // Fix 'resolution-mode' assertions are only supported when moduleResolution is node16 or nodenext

		"strict": true,
		"alwaysStrict": true,

		"noEmitOnError": true,

		// Linter Checks
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true, // accessing index must always check for undefined
		"noUnusedLocals": true, // Report errors on unused local variables.
	},
	"exclude": [
		"node_modules",
		"websockets/dist"
	],
	"include": [
		"websockets/**/*"
	]
}
